<h1>
  <%%= translate(:listing, :default => "Listing {{model}}", :model => <%= model_name %>.human_name(:count => @<%= plural_name %>.size), :count => @<%= plural_name %>.size, :scope => [:railties, :scaffold]) %>
</h1>

<table>
  <tr>
<% for attribute in attributes -%>
    <th>
      <%%= <%= model_name %>.human_attribute_name('<%= attribute.name_or_reference %>') %>
    </th>
<% end -%>
    <th>
      <%%= translate(:show, :default => 'Show', :scope => [:railties, :scaffold]) %>
    </th>
    <th>
      <%%= translate(:edit, :default => 'Edit', :scope => [:railties, :scaffold]) %>
    </th>
    <th>
      <%%= translate(:destroy, :default => 'Destroy', :scope => [:railties, :scaffold]) %>
    </th>
  </tr>

  <%% @<%= plural_name %>.each do |<%= singular_name %>| %>
  <tr>
<% for attribute in attributes -%>
    <td>
      <%%=h <%= singular_name %>.<%= attribute.name_or_reference %> %>
    </td>
<% end -%>
    <td>
      <%%= link_to translate(:show, :default => 'Show', :scope => [:railties, :scaffold]), :action => :show, :id => <%= singular_name %> %>
    </td>
    <td>
      <%%= link_to translate(:edit, :default => 'Edit', :scope => [:railties, :scaffold]), :action => :edit, :id => <%= singular_name %> %>
    </td>
    <td>
      <%%= link_to translate(:destroy, :default => 'Destroy', :scope => [:railties, :scaffold]), { :action => :destroy, :id => <%= singular_name %> }, :confirm => translate(:confirmation, :default => 'Are you sure?', :scope => [:railties, :scaffold]), :method => :delete %>
    </td>
  </tr>
  <%% end %>
</table>

<br />

